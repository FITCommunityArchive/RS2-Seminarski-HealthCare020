<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Healthcare020.Mobile.Views.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:custom="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="clr-namespace:Healthcare020.Mobile.Resources;assembly=Healthcare020.Mobile"
    xmlns:viewModels="clr-namespace:Healthcare020.Mobile.ViewModels;assembly=Healthcare020.Mobile"
    mc:Ignorable="d">

    <ContentPage.Content>
        <Grid
            Margin="0,0,0,10"
            BackgroundColor="{StaticResource LighterSmokeWhite}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <Frame Margin="0" Padding="0">
                <Grid
                    HorizontalOptions="FillAndExpand"
                    RowSpacing="0"
                    VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>
                    <Frame
                        Grid.Row="0"
                        Margin="0,-30,0,0"
                        BackgroundColor="#00bebe"
                        CornerRadius="30"
                        HorizontalOptions="FillAndExpand" />
                </Grid>
            </Frame>

            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackLayout
                        Grid.Row="0"
                        Margin="40,0,40,0"
                        Orientation="Horizontal"
                        VerticalOptions="End">
                        <!--  top controls  -->
                        <Frame
                            Margin="0,40,0,0"
                            BackgroundColor="{StaticResource LightSmokeWhite}"
                            CornerRadius="50"
                            HeightRequest="350"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="End">
                            <StackLayout Spacing="5">
                                <custom:CircleImage
                                    x:Name="ProfilePic"
                                    Aspect="AspectFit"
                                    HeightRequest="210"
                                    HorizontalOptions="Center"
                                    Source="{Binding ProfilePicImageSource}"
                                    VerticalOptions="Center"
                                    WidthRequest="210">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ProfilePicturePick}" NumberOfTapsRequired="1" />
                                    </Image.GestureRecognizers>
                                </custom:CircleImage>
                                <Label
                                    FontAttributes="Italic"
                                    FontFamily="{StaticResource Montserrat-Light}"
                                    FontSize="{StaticResource FontSize-Smaller}"
                                    HorizontalOptions="Center"
                                    Text="Tap to change profile picture"
                                    TextColor="{StaticResource CustomDarkBlue}" />
                                <Label
                                    Margin="0,30,0,10"
                                    FontFamily="{StaticResource Montserrat-Medium}"
                                    FontSize="{StaticResource FontSize-Large}"
                                    HorizontalOptions="Center"
                                    Text="{Binding Pacijent.ZdravstvenaKnjizica.LicniPodaci.ImePrezime}"
                                    TextColor="{StaticResource CustomDarkBlue}" />
                            </StackLayout>
                        </Frame>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="1"
                        Margin="40,0,40,0"
                        Spacing="0"
                        VerticalOptions="FillAndExpand">
                        <Frame
                            BorderColor="Transparent"
                            CornerRadius="50"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Center">
                            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                                <Button
                                    x:Name="EditProfileBtn"
                                    Clicked="EditProfileBtn_OnClicked"
                                    Command="{Binding EditProfileNavigationCommand}"
                                    Style="{StaticResource CustomButtonStyle}"
                                    Text="Edit profile" />
                                <Button
                                    x:Name="ChangePasswordBtn"
                                    Clicked="ChangePasswordBtn_OnClicked"
                                    Style="{StaticResource CustomButtonStyle}"
                                    Text="Change password" />
                            </StackLayout>
                        </Frame>
                    </StackLayout>

                    <StackLayout
                        Grid.Row="2"
                        Margin="40,5"
                        VerticalOptions="End">
                        <!--  bottom controls  -->
                        <Frame
                            BackgroundColor="{StaticResource LighterSmokeWhite}"
                            BorderColor="Transparent"
                            HasShadow="False"
                            HeightRequest="55"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="End">
                            <Button
                                x:Name="LogoutBtn"
                                BackgroundColor="{StaticResource LightNavyBlue}"
                                Command="{Binding LogoutCommand}"
                                ContentLayout="Left,0"
                                CornerRadius="25"
                                FontFamily="{StaticResource Montserrat-Regular}"
                                FontSize="{StaticResource FontSize-Medium}"
                                HeightRequest="50"
                                HorizontalOptions="FillAndExpand"
                                Text="Logout"
                                TextColor="WhiteSmoke"
                                VerticalOptions="FillAndExpand">
                                <Button.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding}" NumberOfTapsRequired="1" />
                                </Button.GestureRecognizers>
                            </Button>
                        </Frame>
                        <Label
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="Delete account"
                            TextColor="DarkRed" />
                    </StackLayout>
                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>